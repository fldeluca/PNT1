@model IEnumerable<CineORT.Models.Funcion>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HorarioFuncion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AsientosDisponibles)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsLlena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sala)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pelicula)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HorarioFuncion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AsientosDisponibles)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsLlena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sala.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pelicula.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FuncionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FuncionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FuncionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
