@model CineORT.Models.Reserva

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar reserva @Model.ReservaId</h1>

<h4>Reserva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReservaId" />

 
                <input asp-for="FechaReserva" class="form-control" hidden />
                
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadAsientos" class="control-label"></label>
                <input asp-for="CantidadAsientos" class="form-control" />
                <span asp-validation-for="CantidadAsientos" class="text-danger"></span>
            </div>

                <input asp-for="ReservaConfirmada" class="form-control" hidden/>

            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuncionId" class="control-label"></label>
                <select asp-for="FuncionId" class="form-control" asp-items="ViewBag.FuncionId"></select>
                <span asp-validation-for="FuncionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
