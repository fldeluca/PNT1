@model IEnumerable<CineORT.Models.Pelicula>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de películas</h1>

<p>
    <a asp-action="Create">Crear una película</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duracion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sinopsis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clasificacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duracion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sinopsis)
            </td>
            <td>
                    <img src="@item.Imagen" alt="@item.Nombre" height="75" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clasificacion.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PeliculaId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.PeliculaId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.PeliculaId">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
